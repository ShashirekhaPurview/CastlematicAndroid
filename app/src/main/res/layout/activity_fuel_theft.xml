<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white" />

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fuel Theft Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Modern Date Range Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_margin="8dp"
            android:elevation="6dp"
            android:background="@color/surface_white"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Date Range Selector -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“… Select Date Range"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />

                    <!-- Date Range Spinner -->
                    <Spinner
                        android:id="@+id/date_range_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/spinner_background"
                        android:paddingHorizontal="16dp"
                        android:minWidth="140dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <!-- Custom Date Range (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/custom_date_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <!-- From Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From Date"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:id="@+id/from_date_container"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/date_input_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“…"
                                android:textSize="18sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/from_date_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2025-09-28"
                                android:textSize="14sp"
                                android:textColor="#2C3E50"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- To Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Date"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:id="@+id/to_date_container"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/date_input_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“…"
                                android:textSize="18sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/to_date_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2025-09-28"
                                android:textSize="14sp"
                                android:textColor="#2C3E50"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Selected Date Range Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/selected_range_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data for: Yesterday"
                        android:textSize="14sp"
                        android:textColor="#495057"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/refresh_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="ðŸ”„ Load"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_gradient"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Summary Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="0dp">

            <!-- Row 1: Total & Pending Alerts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/total_card"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/card_gradient_purple">

                        <TextView
                            android:id="@+id/total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Alerts"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 L"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pending_alerts_card"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/card_gradient_red">

                        <TextView
                            android:id="@+id/pending_alerts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending Alerts"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pending_alerts_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 L"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2: Action Pending & Resolved -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_pending_card"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/card_gradient_orange">

                        <TextView
                            android:id="@+id/action_pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action Pending"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/action_pending_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 L"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/resolved_card"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/card_gradient_green">

                        <TextView
                            android:id="@+id/resolved_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resolved"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resolved_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 L"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 3: False Alerts -->
            <androidx.cardview.widget.CardView
                android:id="@+id/false_card"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_blue">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="False Alerts"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/false_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 L"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/false_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Filter Header -->
            <LinearLayout
                android:id="@+id/filter_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:background="#F5F5F5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/filter_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Records"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/record_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 records"
                    android:textSize="14sp"
                    android:textColor="#6C757D"
                    android:layout_marginEnd="12dp" />

                <!-- FIXED: Better visibility for Show All button -->
                <Button
                    android:id="@+id/clear_filter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Show All"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_clear_bg"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="16dp"
                    android:minWidth="100dp" />

            </LinearLayout>

            <!-- Pagination Controls -->
            <LinearLayout
                android:id="@+id/pagination_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="#F8F9FA"
                android:visibility="gone">

                <!-- FIXED: Prev button with proper contrast and sizing for small devices -->
                <Button
                    android:id="@+id/prev_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="â—€ Prev"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_pagination"
                    android:textColor="#2C3E50"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="90dp" />

                <TextView
                    android:id="@+id/page_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Page 1 of 1"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:gravity="center"
                    android:textStyle="bold" />

                <!-- FIXED: Next button with proper contrast and sizing for small devices -->
                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Next â–¶"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_pagination"
                    android:textColor="#2C3E50"
                    android:paddingHorizontal="20dp"
                    android:layout_marginStart="8dp"
                    android:minWidth="90dp" />

            </LinearLayout>

            <!-- Data Container -->
            <LinearLayout
                android:id="@+id/data_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
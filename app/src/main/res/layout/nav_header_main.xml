<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/nav_header_glassy"
    android:padding="20dp"
    android:gravity="bottom">

    <!-- Decorative circles for glassy effect -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        android:background="@drawable/circle_white_blur"
        android:alpha="0.15" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-20dp"
        android:background="@drawable/circle_white_blur"
        android:alpha="0.1" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Profile Image with Glassy Border -->
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:contentDescription="Profile picture" />

        </androidx.cardview.widget.CardView>

        <!-- Username -->
        <TextView
            android:id="@+id/nav_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USER12345"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="4dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/nav_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fleetmanagement@meil.in"
            android:textSize="13sp"
            android:textColor="#F5FFFFFF"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Login Time -->
        <TextView
            android:id="@+id/nav_login_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last login: Oct 23, 2025"
            android:textSize="11sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced DatePicker Theme with proper button visibility -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Primary colors -->
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>

        <!-- Text colors for proper visibility -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#666666</item>
        <item name="android:textColor">#000000</item>

        <!-- Button colors for Cancel/OK -->
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:colorButtonNormal">@color/primary_color</item>

        <!-- Background colors -->
        <item name="android:background">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- Dialog properties -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Button style for DatePicker -->
    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Modern Card Style for Date Selection - THIS WAS MISSING -->
    <style name="DateSelectionCard">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@drawable/modern_card_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Alternative card styles for different components -->
    <style name="ModernCard">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/surface_white</item>
    </style>

    <style name="ElevatedCard" parent="ModernCard">
        <item name="android:elevation">8dp</item>
    </style>
</resources>

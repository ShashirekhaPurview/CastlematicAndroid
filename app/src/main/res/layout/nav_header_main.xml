<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_header_gradient"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Proper circular background for logo -->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_marginTop="24dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/castlematic_icon"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:background="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="MEIL-AMAS"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fleetmanager@meil.in"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.8" />

    <TextView
        android:id="@+id/nav_login_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Fleet Management!"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:alpha="0.6"
        android:layout_marginTop="4dp" />

</LinearLayout>
